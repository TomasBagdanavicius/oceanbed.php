{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Rebuild special comments in all files",
            "type": "shell",
            // `DOC_ROOT` cannot be altered.
            "command": "DOC_ROOT=/opt/homebrew/var/www SERVER_NAME=localhost SERVER_PORT=80 php ${workspaceFolder}/scripts/rebuild-special-comments.php",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }, {
            "label": "Rebuild special comments in current file",
            "type": "shell",
            // `DOC_ROOT` cannot be altered.
            "command": "DOC_ROOT=/opt/homebrew/var/www SERVER_NAME=localhost SERVER_PORT=80 php ${workspaceFolder}/scripts/rebuild-special-comments-file.php ${file}",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }, {
            "label": "Remove special comments in all file",
            "type": "shell",
            // `DOC_ROOT` cannot be altered.
            "command": "DOC_ROOT=/opt/homebrew/var/www SERVER_NAME=localhost SERVER_PORT=80 php ${workspaceFolder}/scripts/remove-special-comments.php",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }, {
            "label": "Restore filesystem bin",
            "type": "shell",
            "command": "./scripts/restore-test-filesystem-bin.sh",
            "group": "test",
            "presentation": {
                "reveal": "never"
            }
        }, {
            "label": "PHP-CS-Fixer fix",
            "type": "shell",
            "command": "composer fix",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }, {
            "label": "PHP-CS-Fixer fix dry run",
            "type": "shell",
            "command": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}